:root{
	position: absolute;
	height: 500px;
	width: 100%;
	background-color: #2e3359;
	display:flex;
	flex-direction: row;
}

.leftField{
	background-color: #0e121c;
	min-height: 100%;
}

.leftField .skill {
	background-color: #241f69;
	width: 100%;
	height: 100px;
	margin-bottom: 5px;
}

.leftField .skill .text{
	-unity-text-align: upper-center;
	font-size: 20px;
}

.rightField{
	background-color: #0e121c;
	flex: 2;
	height: 100%;
	right: 0;
	display: flex;
	justify-content: center;
}

.rightField .skill{
	position: relative;
	background-color: #241f69;
	width: 100px;
	flex: 50px;
}

